<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_linen_screen"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="60dp" >

    <EditText
        android:id="@+id/et_mobile"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_common_form_field"
        android:ems="10"
        android:hint="@string/user_name"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dip" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/et_mail"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/bg_common_form_field"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingLeft="5dp" />
  <Switch
        android:id="@+id/alert_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/alert_service"
        android:checked="true" />
    <Switch
        android:id="@+id/sms_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sms_service" />
        <Switch
        android:id="@+id/mail_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mail_service"
        android:visibility="gone" />
        <Switch
        android:id="@+id/alarm_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alarm_service"
        android:checked="true" />
    <Button
        android:id="@+id/bt_update"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bt_bg_blue_half"
        android:text="Update"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</LinearLayout>